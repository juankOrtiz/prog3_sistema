<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.juan.sistema.controllers.CuentaFormController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <Label fx:id="tituloLabel" text="[Título Dinámico]" style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <GridPane vgap="10" hgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100.0" />
            <ColumnConstraints prefWidth="200.0" />
        </columnConstraints>

        <Label text="ID (Solo lectura):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="idField" editable="false" promptText="ID generado" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="descripcionField" promptText="Ej: Cuenta de Ahorros" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Saldo Inicial:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="saldoField" promptText="0.00" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Guardar" onAction="#manejarBotonGuardar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancelar" onAction="#manejarBotonCancelar" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
